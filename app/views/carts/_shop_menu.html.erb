<% unless current_search.blank? %>
  <%= simple_form_for(@cart) do |f| %>
    <%= f.error_notification %>
		<% @shop.items.each do |i| %>
			<%= render 'items/show', item: i, f: f %>
		<% end %>    
		<div class="actions" style='display:none;'>
			<%= f.button :submit, "Checkout", class: "btn btn-block btn-large btn-success" %>
		</div>

  <% end %>
<% end %>