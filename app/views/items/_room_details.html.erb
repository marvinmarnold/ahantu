<dl class="dl-horizontal dl-nopadding">
  <% room_tag_categories.each do |c| %>
    <% unless room.subclass_tags(c).blank? %>
      <dt class="dl-nopadding"><%= label_for_tag_category(c) %></dt>
      <dd class="dl-nopadding"><%= room.subclass_tags(c).all.join(", ") %></dd>
    <% end %>
  <% end %>
</dl>