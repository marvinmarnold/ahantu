 <%= render "shared/custom_errors", errors: @credit_card.errors.map { |e| e[:message]} %>
<form action="<%= ::SPREEDLY_ENVIRONMENT.transparent_redirect_form_action %>" method="POST">
  <fieldset>
    <input name="redirect_url" type="hidden" value="<%= "http://#{request.host}:#{request.port}/credit_cards/added" %>" />
    <input name="environment_key" type="hidden" value="<%= ::SPREEDLY_ENVIRONMENT.key %>" />
     <input name="utf8" type="hidden" value="âœ“">

    <label for="credit_card_full_name">Name on card</label>
    <input id="credit_card_full_name" name="credit_card[full_name]" type="text" size="40em" /><br/>

    <label for="credit_card_number">Card Number</label>
    <input id="credit_card_number" name="credit_card[number]" type="text" size="40em" /><br/>

    <label for="credit_card_verification_value">Security Code</label>
    <input id="credit_card_verification_value" name="credit_card[verification_value]" type="text" size="4em" placeholder="xxx"/><br/>

    <label for="credit_card_month">Expires on</label>
    <input id="credit_card_month" name="credit_card[month]" type="text" placeholder="mm" size="3em" />/
    <input id="credit_card_year" name="credit_card[year]" type="text" placeholder="yyyy" size="5em" />

    <button type='submit' class="btn btn-success btn-lg pull-right"><%= t("credit_card.new.submit") %></button>
  </fieldset>
</form>