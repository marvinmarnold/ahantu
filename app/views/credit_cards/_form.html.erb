<%= simple_form_for(@credit_card) do |f| %>
  <%= f.error_notification %>
  <%= render "shared/custom_errors", errors: @credit_card.errors[:credit_card] %>

  <%= f.input :brand, collection: credit_card_types %>
  <%= f.input :name_on_card, required: true %>
  <%= f.input :number %>
  <%= f.input :cvv %>
  <%= f.input :expiration, discard_day: true, order: [:month, :year] %>

  <hr/>

  <div class="actions">
    <%= f.button :submit, t("credit_card.new.submit"), class: "btn btn-block btn-success btn-large" %>
  </div>
<% end %>
