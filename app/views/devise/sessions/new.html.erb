<div class="container">
  <div class="col-md-3">
  </div>
  <div class="col-md-6">
    <div class="box" style=''>
      <h3>Please Sign In, or <%= link_to t("member_session.new.signup"), new_registration_path(resource_name) %>
      </h3>
      <div class="row">
        <div class="col-xs-6 col-sm-6 col-md-6">
          <%= link_to "Facebook", member_profile_omniauth_authorize_path(:facebook), class: "btn btn-lg btn-primary btn-block" %>
        </div>
        <div class="col-xs-6 col-sm-6 col-md-6">
          <a href="#" class="btn btn-lg btn-info btn-block">Google</a>
        </div>
      </div>
      <div class="login-or">
        <hr class="hr-or">
        <span class="span-or">or</span>
      </div>

      <%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
        <%= f.error_notification %>
        <div class="form-group">
          <label for="inputUsernameEmail">Email</label>
          <%= f.input_field :email, :required => false, :autofocus => true , :label => false , :class => "form-control input-lg" %>
        </div>
        <div class="form-group">
          <%= link_to t("member_session.new.forgot_password"), new_password_path(resource_name), class: "pull-right" %>
          <label for="inputPassword">Password</label>
          <%= f.input_field :password, :required => false , :label => false , :class => "form-control input-lg"  %>
        </div>
        <div class="checkbox pull-right">
          <%= f.input :remember_me, :as => :boolean if devise_mapping.rememberable? %>
        </div>
        <%= f.button :submit, t("member_session.new.signin"), class: "btn btn-primary btn-lg" %>
      <% end %>
    </div>

  </div>

  <div class="col-md-3">
  </div>

</div>

