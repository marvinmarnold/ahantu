<h2>Sign in</h2>

<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email, :required => false, :autofocus => true %>
    <%= f.input :password, :required => false %>
    <%= f.input :remember_me, :as => :boolean if devise_mapping.rememberable? %>
  </div>

  <hr />

  <div class="pull-left">
    <%= f.button :submit, t("member_session.new.signin"), class: "btn btn-large btn-success" %>
  </div>
  <div class="pull-right">
    <%= link_to t("member_session.new.signup"), new_registration_path(resource_name), class: "btn btn-link" %>
    <%= link_to t("member_session.new.forgot_password"), new_password_path(resource_name), class: "btn btn-link" %>
  </div>
<% end %>
