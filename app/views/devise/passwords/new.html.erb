<h2>Forgot your password?</h2>

<%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, :required => true, :autofocus => true %>
  </div>

  <hr />

  <div class="pull-left">
    <%= f.button :submit, t("member_session.forgot_password.send_reminder"), class: "btn btn-large btn-success" %>
  </div>
  <div class="pull-right">
    <%= link_to t("member_session.new.signup"), new_registration_path(resource_name), class: "btn btn-link" %>
    <%= link_to t("member_session.new.signin"), new_session_path(resource_name), class: "btn btn-link" %>
  </div>
<% end %>
