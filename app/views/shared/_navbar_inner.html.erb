<%= link_to "ahantu", root_path, class: "brand" %>
<span class="navbar-text float-right"><%= current_user %></span>
<ul class="nav pull-right">
	<% if current_user.guest? %>
		<li class="divider-vertical"></li>
	    <% Language.all.each do |language| %>
	      <li><%= link_to language.name, set_language_path(language_id: language.id, location: current_location) %></li>
	    <% end %>
		<li class="divider-vertical"></li>
		<li>
		  <%= link_to "Sign in", new_shopper_profile_session_path %>
		</li>
		<li class="divider-vertical"></li>
		<li>
		  <%= link_to "Sign up", new_shopper_profile_registration_path %>
		</li>
	<% end %>

	<% if current_cart.present? %>
		<li><%= link_to "Checkout", checkout_path(current_cart) %></li>
		<li class="divider-vertical"></li>
	<% end %>

	<% unless current_user.guest? %>
		<%= render 'shared/navbar_account_settings' %>
	<% end %>
</ul>