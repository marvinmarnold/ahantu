<!--Main Carousel here-->
<div id="carousel-example-generic" class="carousel slide main-carousel" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
        <li data-target="#carousel-example-generic" data-slide-to="1"></li>
        <li data-target="#carousel-example-generic" data-slide-to="2"></li>
    </ol>

   <!-- Wrapper for slides -->
    <div class="carousel-inner">
        <% shops.each do |shop| %>
          <%= content_tag "div", class: append_first("item", "active") do %>
              <%= content_tag "a", href: url_for(shop) do %>
              <%= image_tag shop.banner_url(:banner) %>
                <div class="carousel-caption">
                    <h3><%= t 'page.index.carousel_text' %></h3>
                </div>
                <div class="carousel-caption user-profile">
                    <div class="media">
                        <div class="media-body">
                            <h4 class="media-heading"><%= shop.name %></h4>
                            <p><%= shop_address shop %></p>
                        </div>
                    </div>
                </div>
              <% end %>
          <% end %>
        <% end %>
    </div>

    <!-- Controls -->
    <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
      <span class="glyphicon glyphicon-chevron-left"></span>
    </a>
    <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
      <span class="glyphicon glyphicon-chevron-right"></span>
    </a>
</div>