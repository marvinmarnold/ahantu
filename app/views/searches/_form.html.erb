<%= simple_form_for(@search) do |f| %>
  <%= f.error_notification %>

  <div class="inputs">
    <%= f.input :keyword, hint: false %>
    <div class="row-fluid">
      <div class="span6"><%= f.input :checkin_at, as: :string, :input_html => {
        :data => { behaviour: "datepicker" },
        value: f.object.checkin_at,
        class: "search-date"
      } %></div>
      <div class="span6"><%= f.input :checkout_at, as: :string, :input_html => {
        :data => { behaviour: "datepicker" },
        value: f.object.checkout_at,
        class: "search-date"
      } %>
      </div>
    </div>

    <hr />

    <%= render 'tags/select_boxes', tags: HotelTag.all, obj: @search %>
  </div>

  <hr />

  <div class="actions">
    <%= f.button :submit, class: "btn btn-block btn-success btn-large" %>
  </div>
<% end %>
