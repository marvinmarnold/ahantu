<div class="col-md-7 col-xs-12 col-sm-12">
<%= f.fields_for :room_searches do |b| %>
        <div class="form-inline">
            <label>Adults</label>
            <div class="no-of-adults">
                <%= b.input_field :adults, as: :select, collection: 1..9, include_blank: false, class: "search-rooms" %>
            </div>
            <%= b.link_to_remove "-", class: "btn btn-default remove"%>
        </div>
<% end %>
</div>


