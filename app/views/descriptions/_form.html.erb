<%= simple_form_for(@description) do |f| %>
  <%= f.error_notification %>

  <div class="inputs">
    <%= f.association :language %>
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.association :describable %>
  </div>

  <div class="actions">
    <%= f.button :submit %>
  </div>
<% end %>
